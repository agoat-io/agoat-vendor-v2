{% extends "layout" %}

{% block content %}
<article class="max-w-4xl mx-auto">
    <!-- Post Header -->
    <header class="mb-8">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ Post.Title }}</h1>
            <div class="flex items-center justify-center text-gray-600 mb-6">
                <time datetime="{{ Post.CreatedAt | formatDate }}" class="text-sm">
                    {{ Post.CreatedAt | formatDate }}
                </time>
                <span class="mx-2">•</span>
                <span class="text-sm">By {{ Post.Author }}</span>
                {% if Post.Published %}
                <span class="mx-2">•</span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Published
                </span>
                {% endif %}
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <div id="post-content" class="prose prose-lg max-w-none">
        {{ Post.Content | markdown }}
    </div>

    <!-- Post Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-600">Share this article:</span>
                <a href="https://twitter.com/intent/tweet?text={{ Post.Title | url_encode }}&url={{ RequestURL | url_encode }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="text-gray-400 hover:text-blue-500">
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                </a>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{ RequestURL | url_encode }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="text-gray-400 hover:text-blue-600">
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                </a>
                <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ RequestURL | url_encode }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="text-gray-400 hover:text-blue-700">
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                </a>
            </div>
            
            {% if user %}
            <div class="flex items-center space-x-2">
                <a href="/post/{{ Post.ID }}/edit" 
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                    <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit
                </a>
            </div>
            {% endif %}
        </div>
    </footer>

    <!-- Related Posts Section -->
    <section class="mt-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Related Articles</h2>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <!-- This would be populated with related posts from the API -->
            <div class="bg-gray-50 p-6 rounded-lg">
                <p class="text-gray-600 text-sm">More articles coming soon...</p>
            </div>
        </div>
    </section>
</article>

<!-- Structured Data for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ Post.Title }}",
  "description": "{{ Post.Content | truncate: 200 }}",
  "image": "https://topvitaminsupply.com/images/{{ Post.Slug }}.jpg",
  "author": {
    "@type": "Person",
    "name": "{{ Post.Author }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Top Vitamin Supply",
    "logo": {
      "@type": "ImageObject",
      "url": "https://topvitaminsupply.com/logo.png"
    }
  },
  "datePublished": "{{ Post.CreatedAt | formatDate }}",
  "dateModified": "{{ Post.UpdatedAt | formatDate }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://topvitaminsupply.com/post/{{ Post.ID }}"
  }
}
</script>

<!-- Breadcrumb Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://topvitaminsupply.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Articles",
      "item": "https://topvitaminsupply.com"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "{{ Post.Title }}",
      "item": "https://topvitaminsupply.com/post/{{ Post.ID }}"
    }
  ]
}
</script>
{% endblock %}
