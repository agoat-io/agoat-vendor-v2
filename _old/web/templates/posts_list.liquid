{% for post in Posts %}
<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
    <div class="p-6">
        <div class="flex items-center text-sm text-gray-500 mb-2">
            <time datetime="{{ post.CreatedAt | formatDate }}">{{ post.CreatedAt | formatDate }}</time>
            <span class="mx-2">•</span>
            <span>{{ post.Author }}</span>
        </div>
        
        <h3 class="text-xl font-semibold text-gray-900 mb-3">
            <a href="/post/{{ post.ID }}" class="hover:text-primary-600 transition-colors duration-200">
                {{ post.Title }}
            </a>
        </h3>
        
        <div class="prose prose-sm text-gray-600 mb-4">
            {{ post.Content | truncate: 150 | markdown }}
        </div>
        
        <div class="flex items-center justify-between">
            <a href="/post/{{ post.ID }}" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                Read more →
            </a>
            {% if post.Published %}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Published
            </span>
            {% else %}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                Draft
            </span>
            {% endif %}
        </div>
    </div>
</article>
{% endfor %}
